<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3DFF8"
    tools:context=".upload_que_teacher">

    <TextView
        android:id="@+id/title"
        android:layout_width="304dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="637dp"
        android:gravity="center"
        android:text="Enter Question Details"
        android:textColor="#033261"
        android:textSize="26dp"
        android:visibility="visible"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="65dp" />

    <EditText
        android:id="@+id/question"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="170dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Question" />

    <EditText
        android:id="@+id/que_no"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="234dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Question No." />


    <Button
        android:id="@+id/upload_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="-1dp"
        android:background="#093968"
        android:text="Upload Question"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="574dp"
        android:text="Subject Name"
        android:textSize="20dp" />

    <RadioGroup
        android:id="@+id/subject_name"
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="310dp">

        <RadioButton
            android:id="@+id/cn"
            android:layout_width="212dp"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:checked="false"
            android:text=" Computer Network"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/dbms"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:checked="false"
            android:text=" Database Management System"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/toc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:checked="false"
            android:text=" Theory Of Computation"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/sepm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:checked="false"
            android:text=" Software Engg and Process  management"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/isee"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:checked="false"
            android:text="  Information System and Engineering"
            android:textSize="18dp" />
    </RadioGroup>

</RelativeLayout>