<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3DFF8"
    tools:context=".view_mcq">


    <TextView
        android:id="@+id/title"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="640dp"
        android:gravity="center"
        android:text="Google Form Link"
        android:textColor="#033261"
        android:textSize="26dp"
        android:visibility="visible"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="65dp" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="589dp"
        android:text="Subject Name"
        android:textSize="20dp" />

    <RadioGroup
    android:id="@+id/subject_name"
    android:layout_width="386dp"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="9dp"
    android:layout_marginBottom="321dp">

    <RadioButton
        android:id="@+id/cn"
        android:layout_width="212dp"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:checked="false"
        android:text=" Computer Network"
        android:textSize="16dp" />

    <RadioButton
        android:id="@+id/dbms"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:checked="false"
        android:text=" Database Management System"
        android:textSize="16dp" />

        <RadioButton
            android:id="@+id/toc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:checked="false"
            android:text=" Theory Of Computation"
            android:textSize="16dp" />

        <RadioButton
            android:id="@+id/sepm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:checked="false"
            android:text=" Software Engg and Process Management"
            android:textSize="16dp" />

        <RadioButton
            android:id="@+id/isee"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:checked="false"
            android:text="  Information System and Engineering"
            android:textSize="16dp" />
    </RadioGroup>

    <EditText
        android:id="@+id/mcq_no"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="238dp"
        android:ems="10"
        android:hint="MCQ Test No."
        android:inputType="number" />

    <TextView
        android:id="@+id/link"
        android:layout_width="381dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="125dp"
        android:gravity="center"
        android:text="Link will display here"
        android:textSize="19dp" />

    <Button
        android:id="@+id/get_link_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="#093968"
        android:text="get link"
        android:textColor="#FFF" />

</RelativeLayout>