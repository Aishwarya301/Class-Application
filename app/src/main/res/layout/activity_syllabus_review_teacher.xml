<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3DFF8"
    tools:context=".syllabus_review_teacher">

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="153dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="599dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <RadioGroup
        android:id="@+id/units"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="476dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/unit_1"
            android:layout_width="65dp"
            android:layout_height="37dp"
            android:layout_marginTop="5dp"
            android:checked="false"
            android:text="1"
            android:textSize="17dp" />

        <RadioButton
            android:id="@+id/unit_2"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:checked="false"
            android:text="2"
            android:textSize="17dp" />

        <RadioButton
            android:id="@+id/unit_3"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:checked="false"
            android:text="3"
            android:textSize="17dp" />

        <RadioButton
            android:id="@+id/unit_4"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:checked="false"
            android:text="4"
            android:textSize="17dp" />

        <RadioButton
            android:id="@+id/unit_5"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:checked="false"
            android:text="5"
            android:textSize="17dp" />

        <RadioButton
            android:id="@+id/unit_6"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:checked="false"
            android:text="6"
            android:textSize="17dp" />
    </RadioGroup>

    <EditText
        android:id="@+id/subtopic1"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="382dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Subtopic 1" />

    <EditText
        android:id="@+id/subtopic2"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="328dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Subtopic 2" />

    <EditText
        android:id="@+id/subtopic3"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="273dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Subtopic 3" />

    <EditText
        android:id="@+id/subtopic4"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="217dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Subtopic 4" />

    <EditText
        android:id="@+id/subtopic5"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="161dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Subtopic 5" />

    <EditText
        android:id="@+id/subtopic6"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="102dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Subtopic 6" />

    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="#093968"
        android:text="Add"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="195dp"
        android:layout_marginBottom="551dp"
        android:text="Unit No."
        android:textSize="23dp" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="675dp"
        android:text="Upload Subtopics"
        android:textColor="#033261"
        android:gravity="center"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="123dp"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="229dp"
        android:layout_marginBottom="604dp"
        android:text="Subject "
        android:textSize="23dp" />

</RelativeLayout>